@{
    ViewBag.Title = "Danh sách level";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var levelName = Request["levelName"];
    var lstLevel = (List<tb_Level>)TempData["Level"];
}
@using Model;
@model PagedList.IPagedList<tb_Level>
@using PagedList.Mvc;

@using (Html.BeginForm("Search", "Level"))
{
    <div class="panel panel-primary">
        <div class="panel-heading">Tìm kiếm level</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <input type="text" class="form-control" id="levelName" name="levelName" placeholder="levelName" value="@levelName">
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <button type="submit" class="btn btn-purple waves-effect waves-light">Tìm kiếm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="padding:15px">
                <h3 class="panel-title" style="font-weight:bold">DANH SÁCH LEVEL</h3>
                <div style="top:7px; position:absolute;right:40px">
                    <a href="Level/Create" class="btn btn-success"><i class="fa fa-plus"></i> Thêm mới</a>
                    <a href="#" class="btn btn-danger"><i class="fa fa-trash-o"></i> Xóa nhiều</a>
                </div>
            </div>
            <div class="panel-body" style="padding:0px; width:100%;float:left">
                <div class="table-responsive" style="margin-bottom:0px">
                    <table class="table table-striped table-bordered" style="padding-left:20px; margin-bottom:0px;">
                        <thead>
                            <tr>
                                <th style="width:10px;">
                                    <div class="checkbox" style="margin-bottom:8px !important">
                                        <input type="hidden" id="hdfID" />
                                        <input type="checkbox" id="chkall" />
                                        <label for="chkall"></label>
                                    </div>
                                </th>
                                <th style="text-align:center">Tên level</th>
                                <th style="text-align:center; width:115px">Thứ tự</th>
                                <th style="text-align:center">Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr id="row_@item.id">
                                    <td style="vertical-align:middle">
                                        <div class="checkbox" style="margin-bottom: 8px !important">
                                            <input type="checkbox" value="@item.id" id="chk'@item.id'" />
                                            <label for="chk'@item.id'"></label>
                                        </div>
                                    </td>
                                    <td style="vertical-align:middle;text-align:center">@item.levelName</td>
                                    <td style="vertical-align:middle;text-align:center">
                                        @Html.HiddenFor(g=> item.id)
                                        @Html.TextBoxFor(g => item.Ordering, new { @class= "form-control text-center" , style="max-width:100px"})
                                    </td>
                                    <td style="vertical-align:middle;text-align:center">@Html.Raw(item.Status==true ?"<span style='color:green'>Kích hoạt</span>":"<span style='color:red'>Chưa kích hoạt</span>")</td>
                                    <td>
                                        <div class="pull-right">
                                            <a href="Level/Edit/@item.id" class="btn btn-primary">
                                                <i class="glyphicon glyphicon-pencil"></i>
                                            </a>
                                            <a href="Level/Delete/@item.id" class="btn btn-danger">
                                                <i class="glyphicon glyphicon-trash"></i>
                                            </a>
                                        </div>
                                        
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { levelName, page }))
            </div>
        </div>
    </div>
</div>